@model SmallFarm.Core.Models.Request.RequestFormModel

@{
    var city = Model.Cities.Select(c => c.Name).ToList()[Model.CityId];
}

<div class="row g-3" style="margin-inline:10em;margin-block:2.7em">
    <div class="text-center">
        <a class="btn btn-outline-warning fs-5" asp-controller="Request" asp-action="Approve" asp-route-id="@Model.Id">APROVE</a>
    </div>

    <div class="col-12 mt-0">
        <label for="inputName" class="form-label">Name</label>
        <input class="form-control" disabled id="inputName" value="@Model.ManufacturerName">
    </div>
    <div class="col-12">
        <label for="inputDescription" class="form-label">Description</label>
        <textarea class="form-control" disabled id="inputDescription" rows="5">@Model.ManufacturerDescription</textarea>
    </div>
    <div class="col-6">
        <label for="inputEmail" class="form-label">Email</label>
        <input class="form-control" disabled id="inputEmail" value="@Model.UserEmail">
    </div>
    <div class="col-6">
        <label for="inputNumber" class="form-label">Phone Number</label>
        <input class="form-control" disabled id="inputNumber" value="@Model.ManufacturerPhoneNumber">
    </div>
    <div class="col-6">
        <label for="inputAddress" class="form-label">Address</label>
        <input class="form-control" id="inputAddress" value="@Model.ManufacturerAddress">
    </div>
    <div class="col-6">
        <label for="inputCity" class="form-label">City</label>
        <input type="text" class="form-control" disabled id="inputCity" value="@city">
    </div>
</div>
