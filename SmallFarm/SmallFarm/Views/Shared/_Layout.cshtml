@using SmallFarm.Extensions
@using SmallFarm.Core.Models.Product
@using Microsoft.AspNetCore.Identity
@using SmallFarm.Core.Contracts
@using SmallFarm.Data.Entities

@inject SignInManager<ApplicationUser> SignInManager;
@inject IApplicationUserService ApplicationUserService;

@{
    var queryModel = new AllProductsQueryModel();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SmallFarm</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SmallFarm.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//use.fontawesome.com/releases/v5.15.4/css/all.css">
</head>
<body style="background-color: #B1FAA2">
    <header id="header" style="font-size:18px">
        <nav id="nav" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/Images/logo.png" style="height:2.5em" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-between">

                        <partial name="_CategoriesPartial" />

                        @if (SignInManager.IsSignedIn(User) && !User.IsManufacturer())
                        {
                            <li class="nav-item fs-4 text-success fw-bold">
                                Welcome back @ApplicationUserService.GetFullName(User.Identity!.Name!)!
                            </li>
                        }
                        @if (User.IsManufacturer())
                        {
                            <li class="nav-item fs-4 text-success fw-bold">
                                Welcome back @ApplicationUserService.GetManufacturerName(User.Identity!.Name!)!
                            </li>
                        }

                        <form asp-area="" asp-controller="Product" asp-action="Index" class="nav-item d-flex me-5" method="get">
                            <input asp-for="@queryModel.SearchTerm" id="searchInput" class="form-control me-2" placeholder="Search">
                            <button class="btn btn-outline-success" type="submit">Search</button>
                        </form>
                    </ul>

                    @if (User.IsManufacturer())
                    {
                        <partial name="_ManufacturerPanelPartial" />
                    }

                    @if (User.IsAdmin())
                    {
                        <partial name="_AdminPanelPartial" />
                    }
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-3">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted d-flex justify-content-around flex-wrap" style="background-color:white">
        <span>&copy; @DateTime.Now.Year - SmallFarm</span>
        <span class="ms-5">Student Project made by Gabriel Dimitrov for ASP.NET Advanced in SoftUni</span>
        <span>All images are taken from Bing Search</span>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", false)

    @if (User.IsManufacturer())
    {
        <style>
            #nav {
                background-color: #FAF39B;
        </style>
    }
    else
    {
        <style>
            #nav, #info {
                background-color: #A4E7E0;
        </style>
    }
</body>
</html>