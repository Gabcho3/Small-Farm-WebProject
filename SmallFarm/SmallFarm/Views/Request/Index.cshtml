@using SmallFarm.Core.Models.Request;

@model List<RequestFormModel>

@{
    ViewData["Title"] = "All Requests";
}

@if (!Model.Any())
{
    <h3 class="text-center mt-5" style="font-size:32px">There are no requests!</h3>
}
else
{

    <div id="carouselExampleIndicators" class="carousel slide bg-secondary">

        <div class="carousel-indicators">
            @for (int i = 0; i < Model.Count; i++)
            {
                if (i == 0)
                {
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active bg" aria-current="true"></button>
                }
                else
                {
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@i"></button>
                }
            }
        </div>
        <div class="carousel-inner">
            @foreach (var request in Model)
            {
                var city = request.Cities.Select(c => c.Name).ToList()[request.CityId];

                <div class="carousel-item active">
                    <div class="row g-3" style="margin-inline:10em;margin-block:2.7em">
                        <div class="text-center">
                            <a class="btn btn-outline-warning fs-5" asp-controller="Request" asp-action="Approve" asp-route-id="@request.Id">APROVE</a>
                        </div>

                        <div class="col-12 mt-0">
                            <label for="inputName" class="form-label">Name</label>
                            <input class="form-control" disabled id="inputName" value="@request.ManufacturerName">
                        </div>
                        <div class="col-12">
                            <label for="inputDescription" class="form-label">Description</label>
                            <textarea class="form-control" disabled id="inputDescription" rows="5">@request.ManufacturerDescription</textarea>
                        </div>
                        <div class="col-6">
                            <label for="inputEmail" class="form-label">Email</label>
                            <input class="form-control" disabled id="inputEmail" value="@request.UserEmail">
                        </div>
                        <div class="col-6">
                            <label for="inputNumber" class="form-label">Phone Number</label>
                            <input class="form-control" disabled id="inputNumber" value="@request.ManufacturerPhoneNumber">
                        </div>
                        <div class="col-6">
                            <label for="inputAddress" class="form-label">Address</label>
                            <input class="form-control" id="inputAddress" value="@request.ManufacturerAddress">
                        </div>
                        <div class="col-6">
                            <label for="inputCity" class="form-label">City</label>
                            <input type="text" class="form-control" disabled id="inputCity" value="@city">
                        </div>
                    </div>
                </div>
            }
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                <span class="carousel-control-prev-icon bg-black" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                <span class="carousel-control-next-icon bg-black" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
}


@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        var childDiv = document.getElementById("carouselExampleIndicators");
        var parentMain = childDiv.parentElement;
        var containerDiv = parentMain.parentElement;

        containerDiv.classList.remove("mt-3");
        containerDiv.classList.remove("container");
    </script>
}
